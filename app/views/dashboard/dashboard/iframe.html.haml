- content_for :style do
  = @css

%script{:type => "text/x-handlebars", :'data-template-name' => "app"}
  = @app_html.html_safe

- unless @content_type.nil?
  %script{:type => "text/x-handlebars", :'data-template-name' => @content_type.name}
    = @html

  :javascript
    var content_type = #{@content_type.to_json}
