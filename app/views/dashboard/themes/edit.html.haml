.page-header
  %h1 Theme Library
  %h4.muted Edit your Theme's Settings
= semantic_form_for [:dashboard, @theme] do |f|
  = render 'form', f: f
  = f.actions do
    = f.action :submit, label: "Update Theme & Go to Roller", input_html: {:class => "btn btn_primary"}
    = f.action :cancel, :as => :link, :label => "Cancel"
    .pull-right{style:"padding-right:20px;"}
      = link_to '<strong>Destroy this Theme!</strong>'.html_safe, dashboard_theme_path(@theme), :confirm => 'Are you sure. This cannot be undone?', :method => :delete, class: "btn btn-danger"
