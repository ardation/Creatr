#survey

- content_for :scripts do
  = javascript_include_tag 'survey/survey'

- content_for :script_includes do
  :javascript
    var survey_contents = #{@survey.contents.to_json};
    var content_types = #{@content_types}

-content_for :title, @survey.name

<script data-template-name="app" type="text/x-handlebars">
{{outlet}}
.btn{:_action => 'incrementStep next'} Start >
</script>

<script data-template-name="Text Template" type="text/x-handlebars">
<div class = "survey_box">
{{data.question}}
{{view Ember.TextField valueBinding="answer"}}
</div>
</script>

<script data-template-name="final" type="text/x-handlebars">
DONE BRO!
</script>