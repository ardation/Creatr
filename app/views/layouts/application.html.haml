!!!
%html
  %head
    %title +Creator
    = stylesheet_link_tag    "application", :media => "all"
    = csrf_meta_tags
    = javascript_include_tag "application"
    = javascript_include_tag "templates/all"
    = yield :scripts
  %body
    -if params[:controller] == 'site' or params[:controller] == 'members/confirmations'
      -if current_member.nil?
        =render 'shared/nav_main'
      -else
        =render 'shared/nav_main_auth'
    -else
      =render 'shared/nav_dash'

    = yield
    = render 'footer'
