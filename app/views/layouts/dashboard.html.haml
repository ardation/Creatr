!!!
%html
  %head
    %title
      = "+Creator |"
      = params[:controller].capitalize
    = stylesheet_link_tag    "application", :media => "all"
    = csrf_meta_tags
    = javascript_include_tag "application"
    = javascript_include_tag "all"
    = yield :scripts
  %body
    = render 'dash_nav'
    #wrap
      .navbar-spacer
      .container-fluid
        .row-fluid
          .span3
            = render 'dash_nav_left'
          .span9#emberContainer
            - if flash[:notice]
              .alert.alert-info
                %button{:type => "button", :class => "close", "data-dismiss" => "alert"} x
                = flash[:notice]
            - if flash[:warning]
              .alert
                %button{:type => "button", :class => "close", "data-dismiss" => "alert"} x
                = flash[:warning]
            - if flash[:success]
              .alert.alert-success
                %button{:type => "button", :class => "close", "data-dismiss" => "alert"} x
                = flash[:success]
            - if flash[:error]
              .alert.alert-error
                %button{:type => "button", :class => "close", "data-dismiss" => "alert"} x
                = flash[:error]
            = yield
      #push
    = render 'dash_footer'
